<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/buttonsFrame"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        tools:layout_editor_absoluteX="0dp">

        <LinearLayout
            android:id="@+id/pageBar"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:backgroundTint="@color/brown"
            android:orientation="horizontal">

            <Button
                android:id="@+id/homeButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:fontFamily="@font/helvetica"
                android:gravity="bottom|center"
                android:text="Home"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/shoppingButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:backgroundTint="@color/brown"
                android:fontFamily="@font/helvetica_neue"
                android:gravity="bottom|center"
                android:text="Shopping"
                android:textAllCaps="false"
                android:textSize="11sp" />

            <Button
                android:id="@+id/kitchenOverview"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:backgroundTint="@color/brown"
                android:fontFamily="@font/helvetica_neue"
                android:gravity="bottom|center"
                android:text="Overview"
                android:textAllCaps="false"
                android:textSize="11sp" />

            <Button
                android:id="@+id/recipesButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:backgroundTint="@color/brown"
                android:fontFamily="@font/helvetica_neue"
                android:gravity="bottom|center"
                android:text="Recipes"
                android:textAllCaps="false"
                android:textSize="13sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/iconLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/homeIcon"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/home_icon" />

            <ImageView
                android:id="@+id/shoppingIcon"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_baseline_add_shopping_cart_24" />

            <ImageView
                android:id="@+id/overviewIcon"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ingredient_icon" />

            <ImageView
                android:id="@+id/recipeIcon"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:layout_marginEnd="88dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_action_name" />
        </LinearLayout>
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/playfair_display_bold"
            android:text="Pantry Overview"
            android:textColor="@color/green"
            android:textSize="40dp" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floatingActionButton"
            android:layout_width="148dp"
            android:layout_height="80dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:drawable/ic_input_add" />


    </RelativeLayout>

    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/buttonsFrame"
        android:layout_below="@+id/header"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="-2dp" />

</RelativeLayout>